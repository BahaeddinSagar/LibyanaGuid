<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ly.bsagar.libyanaguid.services">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:drawableEnd="@drawable/ic_public_black_24dp"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:drawableRight="@drawable/ic_public_black_24dp"
            android:drawableStart="@drawable/ic_public_black_24dp"
            android:gravity="center"
            android:text="@string/internetService"
            android:textSize="@dimen/text_size_large" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"

                android:onClick="ActInternet"
                android:src="@drawable/ic_check_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"

                android:onClick="DisInternet"
                android:src="@drawable/ic_clear_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"

                android:onClick="getSetting"
                android:src="@drawable/ic_settings_black_24dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:drawableEnd="@drawable/ic_public_black_24dp"
            android:drawableLeft="@drawable/ic_public_black_24dp"
            android:drawableRight="@drawable/ic_public_black_24dp"
            android:drawableStart="@drawable/ic_public_black_24dp"
            android:gravity="center"
            android:text="@string/internetpackages"
            android:textSize="@dimen/text_size_large" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:gravity="center">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:layout_column="0"
                android:layout_row="1"
                android:onClick="First"
                android:src="@drawable/ic_filter_1_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:layout_column="1"
                android:layout_row="1"
                android:onClick="Second"
                android:src="@drawable/ic_filter_2_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:layout_column="2"
                android:layout_row="1"
                android:onClick="Third"
                android:src="@drawable/ic_filter_3_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:layout_column="0"
                android:layout_row="2"
                android:onClick="Fourth"
                android:src="@drawable/ic_filter_4_black_24dp" />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:layout_column="1"
                android:layout_row="2"
                android:onClick="Status"
                android:src="@drawable/ic_help_outline_black_24dp" />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:layout_column="2"
                android:layout_row="2"
                android:onClick="Cancel"
                android:src="@drawable/ic_clear_black_24dp" />


        </GridLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:drawableEnd="@drawable/ic_phone_paused_black_24dp"
            android:drawableLeft="@drawable/ic_phone_paused_black_24dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_phone_paused_black_24dp"
            android:drawableStart="@drawable/ic_phone_paused_black_24dp"
            android:gravity="center"
            android:text="@string/callWaiting"
            android:textSize="@dimen/text_size_large" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"

                android:onClick="actwaiting"
                android:src="@drawable/ic_check_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:onClick="deactwaiting"
                android:src="@drawable/ic_clear_black_24dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:onClick="statuswaiting"
                android:src="@drawable/ic_help_outline_black_24dp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:drawableEnd="@drawable/ic_phone_missed_black_24dp"
            android:drawableLeft="@drawable/ic_phone_missed_black_24dp"
            android:drawableRight="@drawable/ic_phone_missed_black_24dp"
            android:drawableStart="@drawable/ic_phone_missed_black_24dp"
            android:gravity="center"
            android:text="@string/missedCallNotification"
            android:textSize="@dimen/text_size_medium" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:background="@color/colorAccent"
                android:onClick="actmissed"
                android:src="@drawable/ic_check_black_24dp" />

            <TextView
                android:layout_width="@dimen/fab_size"
                android:layout_height="match_parent" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/fab_margin"
                android:onClick="deactmissed"
                android:src="@drawable/ic_clear_black_24dp" />

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5706305242969303/3876548072"
            >
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</ScrollView>